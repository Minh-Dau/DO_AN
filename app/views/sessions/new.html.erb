<h1>Đăng Nhập</h1>

<%= form_with url: login_path, method: :post do %>
  <div>
    <label>Email:</label>
    <%= email_field_tag :email, params[:email] %>
  </div>
  <div>
    <label>Mật khẩu:</label>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Đăng Nhập" %>
  </div>
<% end %>

